#account-page.account-page
  .account-page__top
    .account-page__top__left-corner
    .account-page__top__right-corner

  .account-page__inner
    .account-page__inner__header
      %h2 新規登録
    .account-page__inner__form
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        .field
          .field-label
            = f.label :name
          .field-input
            = f.text_field :name, maxlength: "25", class: "js-count", autofocus: true
            .counter
              %span.show-count> 0
              \/ 25
        .field
          .field-label
            = f.label :email
          .field-input
            = f.email_field :email
        .field
          .field-label
            = f.label :password
            %i (英数字8文字以上)
          .field-input
            = f.password_field :password, autocomplete: "off"
        .field
          .field-label
            = f.label :パスワードをもう一度お願いします
          .field-input
            = f.password_field :password_confirmation, autocomplete: "off"
        .actions
          = f.submit "Sign up", class: 'btn'

    = render "devise/shared/links"

  .account-page__bottom
    .account-page__bottom__left-corner
    .account-page__bottom__right-corner
